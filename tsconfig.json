{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "target": "es6",

    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./src",

    "sourceMap": true,
    "lib": ["es6"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {},

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
