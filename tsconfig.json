{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,

      "target": "es6",

      "noImplicitAny": true,
      "moduleResolution": "node",
      "rootDir": "./src",

      "sourceMap": true,
      "lib": ["es6"],
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
         "ts/*": ["ts/*"],
         "database/*": ["database/*"],
         "service/*": ["service/*"],
         "lib/*": ["lib/*"],
         "models/*": ["model/*"],
         "middleware/*": ["middleware/*"],
         "router/*": ["router/*"]
      },

      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "include": ["src/**/*"]
}
